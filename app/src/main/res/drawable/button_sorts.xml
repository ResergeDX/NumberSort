<?xml version="1.0" encoding="utf-8"?>
<!--
Forma y color del botones de ordenamiento
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:angle="270"
        android:startColor="@color/teal_100"
        android:endColor="@color/blue_navy" />
    <padding android:bottom="2sp"
        android:left="2sp"
        android:right="2sp"
        android:top="2sp"/>
    <stroke android:width="2dp"/>
    <corners android:radius="10dp"/>
</shape>